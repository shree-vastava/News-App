<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/rectangle_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:id="@+id/image_view_grid"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/ic_placeholder"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_title_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/image_view_grid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:ellipsize="end"
                android:maxLines="3"
                android:fontFamily="@font/railway_semi_bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tv_timestamp_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_grid"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:ellipsize="end"
                android:maxLines="3"
                android:fontFamily="@font/mont_regular"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_8ssp"
                android:layout_marginTop="@dimen/_10sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>